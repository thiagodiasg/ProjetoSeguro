def novoOrcamento():
    print("novoOrçameto")
    global janela
    janela.destroy()
    janela = Tk()
    janela['bg'] = 'gray'
    lb1 = Label(janela, width=30, text="Escolha o tipo de veículo", foreground = "white", bg = "gray")
    bt1 = Button(janela, width=20, text="Linha leve", font="MalgunGothic 9 bold", bg='white', command=linhaLeve)
    bt2 = Button(janela, width=20, text="Linha pesada", font="MalgunGothic 9 bold", bg='white', command=linhaPesada)
    bt3 = Button(janela, width=20, text="Motocicletas", font="MalgunGothic 9 bold", bg='white', command=motos)
    bt4 = Button(janela,width = 20, text = "Voltar",font="MalgunGothic 9 bold", bg='white', command=orcamentos)
    bt1.place(x=25, y=50)
    bt2.place(x=25, y=90)
    bt3.place(x = 25, y=130)
    bt4.place(x =25, y = 170)
    lb1.place(x=30, y=10)
    janela.geometry('300x300+500+100')

